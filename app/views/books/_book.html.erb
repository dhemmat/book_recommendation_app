<li class="book">
  <div class="cover-image">
    <%= image_tag(book.cover_image, width: 128)%>
  </div>
  <div class="book-details">
    <div class="book-title">
      <%= link_to(book.title, book_path(book)) %>
    </div>
    <div class="book-genre">
      <%= book.genre.name %>
    </div>
    <div class="book-summary">
      <%= book.summary %>
    </div>
  </div>
</li>
